<launch>
   <!-- 将 Urdf 文件的内容加载到参数服务器 -->
  <param name="robot_description" command="$(find xacro)/xacro $(find slam_cver)/xacro/car_sense.xacro" />

  <!-- 启动SLAM节点 -->
  <include file="$(find slam_cver)/launch/gmapping_slam.launch" />
  <!-- 运行move_base节点 -->
  <include file="$(find slam_cver)/launch/move.launch" />  

  <!-- 运行rviz -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find slam_cver)/config/gmapping_slam.rviz" />

  <!-- 启动 gazebo -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find slam_cver)/worlds/box_house.world" />
  </include>
  
  <!-- 在 gazebo 中显示机器人模型 -->
  <node pkg="gazebo_ros" type="spawn_model" name="model" args="-urdf -model mycar -param robot_description"  />
  
</launch>
